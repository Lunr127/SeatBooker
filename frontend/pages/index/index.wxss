.container {
  padding: 30rpx;
}

/* 用户信息区域 */
.user-info {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.credit {
  font-size: 28rpx;
  color: #666;
}

/* 功能区域 */
.function-area {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
  padding: 30rpx 0;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.function-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.function-icon image {
  width: 100%;
  height: 100%;
}

.function-name {
  font-size: 28rpx;
  color: #333;
}

/* 自习室列表 */
.study-rooms {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #007AFF;
}

.room-list {
  padding: 0 10rpx;
}

.room-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.room-item:last-child {
  border-bottom: none;
}

.room-name {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.room-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.room-location, .room-time {
  font-size: 26rpx;
  color: #666;
}

.room-seats {
  font-size: 26rpx;
  color: #999;
}

.no-data {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
} 